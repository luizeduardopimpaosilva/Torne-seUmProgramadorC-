@{
    ViewBag.Title = "Paginas";
}
@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success role=" alert"">@TempData["Sucesso"]</div>
}
@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger role=" alert"">@TempData["Erro"]</div>

}

<div class="jumbotron">

    <h2>Sign in</h2>

    <form action="/paginas/signin" method="post">
        <div class="form-group">
            <label for="person_email_address"> </label>
            <input type="text" class="form-control" id="person_email_address" name="person_email_address" placeholder="User Key or email" />
        </div>
        <div class="form-group">
            <label for="person_password"> </label>
            <input type="password" class="form-control" id="person_password" name="person_password" placeholder="Password" />
        </div>

        <div>
            <a href="/paginas/novo" class="btn btn-link">No account? Create one!</a>
            <br />
            <a href="/paginas/recupera" class="btn btn-link">Forgotten your password? </a>
        </div>

        <div>
            <br />
            <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
        </div>

    </form>
</div>

